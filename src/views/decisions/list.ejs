<%- include('../layouts/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Karar Geçmişi</h2>
    <a href="/decisions/new" class="btn btn-success">
        ➕ Yeni Karar Al
    </a>
</div>

<% if (typeof decisions !== 'undefined' && decisions.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Tarla</th>
                    <th>Ürün Tipi</th>
                    <th>Karar</th>
                    <th>Neden</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <% decisions.forEach(decision => { %>
                    <tr>
                        <td><%= decision.id %></td>
                        <td><%= decision.farm_name %> (<%= decision.city %>)</td>
                        <td><%= decision.crop_type %></td>
                        <td>
                            <% if (decision.decision_status === 'UYGUN') { %>
                                <span class="badge bg-success">UYGUN</span>
                            <% } else if (decision.decision_status === 'UYGUN_DEGIL') { %>
                                <span class="badge bg-danger">UYGUN DEĞİL</span>
                            <% } else if (decision.decision_status === 'UYARI') { %>
                                <span class="badge bg-warning text-dark">UYARI</span>
                            <% } else { %>
                                <span class="badge bg-secondary"><%= decision.decision_status %></span>
                            <% } %>
                        </td>
                        <td class="text-truncate" style="max-width: 200px;" title="<%= decision.reason %>">
                            <%= decision.reason.length > 50 ? decision.reason.substring(0, 50) + '...' : decision.reason %>
                        </td>
                        <td><%= new Date(decision.created_at).toLocaleDateString('tr-TR') %></td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="/decisions/<%= decision.id %>" class="btn btn-info btn-sm">Detay</a>
                                <form action="/decisions/<%= decision.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Bu kararı silmek istediğinizden emin misiniz?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="alert alert-info">
        <h4>Henüz karar oluşturulmamış</h4>
        <p>İlk ekim kararınızı almak için <a href="/decisions/new">buraya tıklayın</a>.</p>
    </div>
<% } %>

<%- include('../layouts/footer') %>

